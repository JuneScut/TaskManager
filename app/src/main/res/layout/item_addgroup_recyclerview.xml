<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:circletextview="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_useravatar"
        android:src="@drawable/icon_personal"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical" />
    <!--<circletextimage.viviant.com.circletextimagelib.view.CircleTextImage-->
        <!--android:id="@+id/iv_useravatar"-->
        <!--android:layout_width="41dp"-->
        <!--android:layout_height="41dp"-->
        <!--android:layout_gravity="center_vertical"-->
        <!--circletextview:circle_color="#1296db"/>-->
    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="你"
        android:textSize="20sp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="15dp"
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/tv_isowner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="所有者"
        android:background="@drawable/textview_style"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="15dp"
        android:textSize="10sp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:visibility="gone"
        />

</LinearLayout>