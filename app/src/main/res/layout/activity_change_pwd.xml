<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.taskmanager.ChangePwd"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
        <ImageView
            android:id="@+id/pwd_return"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/return_arrow"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="更改密码"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"/>
        <ImageView
            android:id="@+id/confirm_change"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/confirm"
            android:layout_marginLeft="230dp" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="10dp"
        android:paddingLeft="10dp">
        <TextView
            android:id="@+id/tv_current_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="当前密码"
            android:layout_marginLeft="5dp"
            android:visibility="invisible"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="15dp" />
        <EditText
            android:id="@+id/current_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="当前密码"
            android:theme="@style/BottomBorderEditView"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:inputType="textPassword"/>
        <TextView
            android:id="@+id/tv_new_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="新密码"
            android:layout_marginLeft="5dp"
            android:visibility="invisible"
            android:textColor="@color/colorPrimary"/>
        <EditText
            android:id="@+id/new_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="新密码"
            android:theme="@style/BottomBorderEditView"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:inputType="textPassword"/>

        <TextView
            android:id="@+id/tv_again_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="确认密码"
            android:layout_marginLeft="5dp"
            android:visibility="invisible"
            android:textColor="@color/colorPrimary"/>
        <EditText
            android:id="@+id/again_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="确认密码"
            android:theme="@style/BottomBorderEditView"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:inputType="textPassword"/>
    </LinearLayout>


</LinearLayout>
